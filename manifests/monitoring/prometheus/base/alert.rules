groups:
- name: BasicKubernetesAlerts
  rules:
  - alert: ResourceRequestCPUTooHigh
    expr: (sum(kube_pod_container_resource_requests_cpu_cores) / sum(kube_node_status_allocatable_cpu_cores)  > 0.9) or absent(kube_pod_container_resource_requests_cpu_cores)
    for: 5m
    labels:
      severity: medium
    annotations:
      summary: "Requested CPU resource is too high comparing to cluster allocatable cpu cores"

  - alert: ResourceRequestMemoryTooHigh
    expr: (sum(kube_pod_container_resource_requests_memory_bytes) / sum(kube_node_status_allocatable_memory_bytes) > 0.95) or absent(kube_pod_container_resource_requests_memory_bytes)
    for: 5m
    labels:
      severity: medium
    annotations:
      summary: "Requested Memory resource is too high comparing to cluster allocatable memory"

  - alert: UnhealthyNodes
    expr: (sum(sum(kube_node_status_condition{status="true",condition!="Ready"}) by (node)) > 0) or absent(kube_node_status_condition)
    for: 5m
    labels:
      severity: medium
    annotations:
      summary: "One or more nodes (\{\{ $labels.node \}\}) in cluster are unhealthy (DiskPressure, KernelDeadlock, MemoryPressure, NetworkUnavailable or OutOfDisk)"

  - alert: PodRestarts
    expr: sum by (namespace, pod) (rate(kube_pod_container_status_restarts_total[5m])) > 0
    for: 5m
    labels:
      severity: medium
    annotations:

      summary: "One or more pods (\{\{ $labels.namespace \}\} / \{\{ $labels.pod \}\}) in cluster are restarting (OOMKilling, BadConfig, ProbeFailing, etc)"

  - alert: PodWaiting
    expr: (sum by (namespace, pod) (kube_pod_container_status_waiting) > 0) or absent (kube_pod_container_status_waiting)
    for: 10m
    labels:
      severity: medium
    annotations:
      summary: "One or more pods (\{\{ $labels.namespace \}\} / \{\{ $labels.pod \}\}) in cluster are in waiting state for 10 minutes"

  - alert: AvgScrapeTime
    expr: (avg(scrape_duration_seconds) > 0.5) or absent(scrape_duration_seconds)
    for: 5m
    labels:
      severity: medium
    annotations:
      summary: "Prometheus scrapes are slow"
